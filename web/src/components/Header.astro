<header class="fixed w-full top-0 z-50 bg-brand-light/95 backdrop-blur-md border-b border-brand-primary/5 transition-all duration-300">
  <div class="container mx-auto px-6 md:px-12">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <a href="/Melisa-Portfolio/" class="text-2xl font-serif text-brand-primary tracking-wide">
        Melisa <span class="italic font-light">Carpintero</span>
      </a>

      <!-- Desktop Nav -->
      <nav class="hidden md:flex items-center space-x-8">
        <a href="/Melisa-Portfolio/#sobre-mi" class="text-brand-primary/80 hover:text-brand-primary transition-colors text-sm font-medium tracking-wide">Sobre Mí</a>
        <a href="/Melisa-Portfolio/#especialidades" class="text-brand-primary/80 hover:text-brand-primary transition-colors text-sm font-medium tracking-wide">Especialidades</a>
        <a href="/Melisa-Portfolio/#testimonios" class="text-brand-primary/80 hover:text-brand-primary transition-colors text-sm font-medium tracking-wide">Testimonios</a>
        <a href="/Melisa-Portfolio/pago" class="px-7 py-2.5 bg-brand-primary text-brand-light rounded-full text-sm font-medium hover:bg-brand-primary/90 transition-all shadow-lg hover:shadow-xl hover:-translate-y-0.5">Agendar Cita</a>
      </nav>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-btn" class="md:hidden p-2 -mr-2 text-brand-primary hover:text-brand-accent transition-colors" aria-label="Abrir menú">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Nav (Hidden by default) -->
  <div id="mobile-menu" class="hidden md:hidden bg-brand-light border-b border-brand-primary/10 absolute w-full left-0 top-20 shadow-2xl origin-top">
    <div class="flex flex-col px-8 py-10 space-y-8 text-center items-center">
      <a href="/Melisa-Portfolio/#sobre-mi" class="mobile-link text-brand-primary text-xl font-serif">Sobre Mí</a>
      <a href="/Melisa-Portfolio/#especialidades" class="mobile-link text-brand-primary text-xl font-serif">Especialidades</a>
      <a href="/Melisa-Portfolio/#testimonios" class="mobile-link text-brand-primary text-xl font-serif">Testimonios</a>
      <a href="/Melisa-Portfolio/pago" class="mobile-link px-10 py-4 mt-4 bg-brand-primary text-brand-light rounded-full text-lg font-medium shadow-xl">Agendar Cita</a>
    </div>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  const links = document.querySelectorAll('.mobile-link');

  if (btn && menu) {
    btn.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
    
    links.forEach(link => {
      link.addEventListener('click', () => {
        menu.classList.add('hidden');
      });
    });
  }
</script>
